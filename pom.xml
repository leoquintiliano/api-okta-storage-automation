	<groupId>br.com.leadersofts</groupId>
	<artifactId>api-okta-storage</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<name>api-okta-storage</name>
	<description> The api-okta-storage is an API responsible to control the storage data flow </description>
	<properties>
		<java.version>17</java.version>
	</properties>

	<dependencies>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-security</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework.security</groupId>
			<artifactId>spring-security-test</artifactId>
